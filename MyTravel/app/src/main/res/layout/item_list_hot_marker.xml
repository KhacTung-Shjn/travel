<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivHotMarker"
        android:layout_width="@dimen/size_100dp"
        android:layout_height="@dimen/size_100dp"
        android:src="@color/colorBetween"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNamePlace"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_progress"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/text_name"
        android:textColor="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/ivHotMarker"
        app:layout_constraintStart_toStartOf="@+id/ivHotMarker"
        app:layout_constraintTop_toBottomOf="@+id/ivHotMarker" />
</androidx.constraintlayout.widget.ConstraintLayout>