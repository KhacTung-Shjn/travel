<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="#5D93FF" android:startColor="#CE83F9" />
            <corners android:radius="@dimen/size_15dp" />
            <stroke android:width="@dimen/size_1dp" android:color="@color/colorBrownLight" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="#6692FF" android:startColor="#CC83F9" />
            <corners android:radius="@dimen/size_15dp" />
            <stroke android:width="@dimen/size_1dp" android:color="@color/colorBrownLight" />
            <!--<solid android:color="@color/color_blue_light"/>-->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_15dp" />
            <stroke android:width="1dp" android:color="@color/colorBrownLight" />
            <solid android:color="#ffffff" />
        </shape>
    </item>
</selector>